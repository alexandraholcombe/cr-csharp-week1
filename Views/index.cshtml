@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Your Contact List</h1>
@if (@Model.Count == 0)
{
    <h3>No contacts have been added.</h3>
}
<ul>
    @foreach (var contact in Model)
    {
        <li><a href='/contact/@contact.GetId()'>@contact.GetName()</a></li>
    }
</ul>
<p><a href="/contact/new">Add a Contact</a></p>
<form action="/contact/clear" method="post">
    <button type="submit" class="btn">Clear All Contacts</button>
</form>
